# Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Database Configuration
# For PostgreSQL (recommended)
POSTGRES_DB=memoria
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Or use DATABASE_URL directly (overrides above settings)
# DATABASE_URL=postgres://user:password@localhost:5432/memoria
# For SQLite (not recommended for production):
# DATABASE_URL=sqlite:///memoria.db

# OpenAI API Key (required for embeddings)
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIM=1536

# LangChain Configuration (optional)
LANGCHAIN_TRACING=false
LANGCHAIN_ENDPOINT=
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=memoria-bot

# Chunking Configuration
CHUNK_SIZE=13
CHUNK_OVERLAP=2

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs

# Application Settings
DEBUG=true
ENVIRONMENT=development
